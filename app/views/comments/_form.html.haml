= form_for(@comment) do |f|
  - if @comment.errors.any?
    #error_explanation
      %h2
        = pluralize(@comment.errors.count, "error")
        prohibited this comment from being saved:
      %ul
        - @comment.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :shot_id
    %br/
    = f.number_field :shot_id
  .field
    = f.label :body
    %br/
    = f.text_area :body
  .actions
    = f.submit