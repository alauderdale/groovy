= render :partial => 'shared/shot_audio', :locals => {:shot => @from_shot}
.container.double-padding-top
	.row
		.span12
			%h1
				New Rebound
			= form_for(:shot, :url => {:action => 'create', :id => @from_shot.id}, :html => { :multipart => true }) do |f| 
				= render(:partial => 'form', :locals => {:f => f})
				.form-buttons
					= submit_tag("Create", :class=>"btn btn-primary") 