-shots.in_groups_of(4,false) do |s|
  .row
    -s.each do |c| 
      .span3.margin-bottom
        = link_to (c) do
          .well.no-margin-bottom
            / = image_tag 'guitar.png'
            = render 'shared/shot_audio', :locals => {@shot => c}

        %h5.no-margin-bottom
          = c.title
        %img.avatar-sm{:src=>"#{c.user.avatar.url(:thumb)}"}
        %h6.display-inline
          = link_to c.user.name, c.user