:javascript
  $(document).ready(function(){

    var myCirclePlayer = new CirclePlayer("#jquery_jplayer_1",
    {
      m4a: "http://www.jplayer.org/audio/m4a/Miaow-07-Bubble.m4a",
      oga: "http://www.jplayer.org/audio/ogg/Miaow-07-Bubble.ogg"
    }, {
      cssSelectorAncestor: "#cp_container_1",
      swfPath: "js",
      wmode: "window",
      keyEnabled: true
    });

  });
  
.row
  .span12
    .media.margin-bottom
      = link_to (@shot.user), :class => "pull-left" do 
        %img.media-object.avatar-lg{:src => "#{@shot.user.avatar.url(:thumb)}"}
      .media-body.margin-bottom
        %h4.media-heading 
          = @shot.title
        %p.muted
          by:
          = link_to (@shot.user) do
            = @shot.user.name
          = @shot.created_at.strftime("%B %d, %Y")
      .clearfix
  .span6
    = render 'shot_audio'
    %p
      = @shot.description
    .comments
      .page-header
        %h5
          -if @shot.comments.count == 1
            = @shot.comments.count
            Response
          -else
            = @shot.comments.count
            Responses
      - @shot.comments.each do |c|
        .media.margin-bottom
          = link_to (@shot.user), :class => "pull-left" do 
            %img.media-object.avatar-med{:src => "#{@shot.user.avatar.url(:thumb)}"}
          .media-body.margin-bottome
            %p.no-margin-bottom
              %strong
                = link_to (@shot.user) do
                  = @shot.user.name
            %p.no-margin-bottom
              = h(c.body)
            %p.muted
              %small
                = c.created_at.strftime("%B %d, %Y")
                -if c.user_id.to_i == current_user.id.to_i
                  = link_to(:comment, {:action => 'destroy', :id => c.id}) do
                    Delete


    = form_for(@comment) do |f| 
      .field
        = f.hidden_field :shot_id, :value=> @shot.id
      .field
        = f.label 'body'
        = f.text_area :body, :rows => 5
      .form-buttons
        = submit_tag("Post comment", :class=>"btn btn-primary") 
  .span6
    -if @shot.user.id == current_user.id
      / Button to trigger modal
      %a{"data-toggle" => "modal", :href => "#delete", :role => "button"}
        %i.icon-trash 
        Delete
      %br
      = link_to({:action => 'edit', :id => @shot.id})do
        %i.icon-cog
        Edit

/ Modal
#delete.modal.hide.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} Ã—
    %h3#myModalLabel 
      Delete Shot
  .modal-body
    %p
      Are you sure you want to permanently delete this shot?
    %p
      Shot Name:
      = @shot.title
  .modal-footer
    %button.btn{"aria-hidden" => "true", "data-dismiss" => "modal"} Cancel
    = form_for(:shot, :url => {:action => 'destroy_shot', :id => @shot.id}, :html => {:class => "display-inline"}) do |f|
      = submit_tag("Delete Shot", :class=>"btn btn-primary")