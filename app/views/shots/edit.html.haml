.row
  .span6
    .media.margin-bottom
      .media-body.margin-bottom
        %h4.media-heading 
          Editing
          %span.muted
            = @shot.title
      .clearfix
    = render 'shot_audio'
  .span6
    = form_for(:shot, :url => {:action => 'update_shot', :id => @shot.id}) do |f|
      .field
        = f.label 'title'
        = f.text_field :title, :required => true
      .field
        = f.label 'description'
        = f.text_area :description, :rows => 5
      .form-buttons
        = submit_tag("Update Groove", :class=>"btn btn-primary")
        = link_to("Cancel", {:action => 'show'}, :class => 'btn')